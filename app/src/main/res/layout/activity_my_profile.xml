<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.myapplication.MyProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MyProfileToolbar"
        android:background="@color/colorBlack"
        android:orientation="horizontal"
        android:padding="10dp"

        >
        <ImageButton
            android:id="@+id/btnImgBackPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:background="#000"
            android:src="@drawable/ic_back_white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="My Profile"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:id="@+id/AvatarLayoutPE"

        >

        <ImageView
            android:id="@+id/ImgAvatarPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            app:layout_constraintRight_toLeftOf="@+id/btnEditPE"
            android:background="@drawable/bg_profile_avatar"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btnEditPE"
            android:textColor="@drawable/text_background"
            android:textAllCaps="false"
            android:text="Edit"
            android:drawableLeft="@drawable/ic_edit_white_18dp"
            android:background="@drawable/button_background"
            android:layout_gravity="right"
            app:layout_constraintRight_toRightOf="parent"


            />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:id="@+id/NameandTypePE"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAccountNamePE"
            android:text="Anna Lee"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/TypeLayoutPE"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Account type:"
            android:id="@+id/txtAccountTypePE"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="5dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#f30000"
                android:id="@+id/txtTypePE"
                android:text="Drinker"

                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="15dp"
            android:id="@+id/PhoneNumberLayoutPE"
            android:background="@drawable/bg_gradient_gray_no_stroke"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtPhonePE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:text="(+84)123 - 546 - 789"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="15dp"
            android:id="@+id/EmailLayoutPE"
            android:background="@drawable/bg_gradient_gray_no_stroke"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtEmailPE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:text="anna.lee@gmail.com"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="15dp"
            android:id="@+id/PasswordLayoutPE"
            android:background="@drawable/bg_gradient_gray_no_stroke"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtPasswordPE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
