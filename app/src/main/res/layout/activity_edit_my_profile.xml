<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.user.myapplication.EditMyProfileActivity"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:id="@+id/EditProfileToolbar"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_cancel_white_18dp"
            android:layout_alignParentLeft="true"

            />

        <TextView
            android:id="@+id/txtMyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnCancel"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="My Profile"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/colorBlack"
        android:id="@+id/AvatarLayout"
        android:layout_below="@+id/EditProfileToolbar"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:id="@+id/btnDone"
            android:textColor="@drawable/text_background"
            android:textAllCaps="false"
            android:text="Done"
            android:background="@drawable/button_background"
            android:gravity="center"
            />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ImgAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_below="@+id/EditProfileToolbar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/bg_profile_avatar"
        />



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/EditField"
       android:layout_below="@+id/ImgAvatar"
       android:layout_margin="20dp"
       >
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Full Name"
       android:textSize="18dp"
       android:id="@+id/txtFullNameP"
       android:textColor="@color/colorBlack"
       android:textStyle="bold"
       />
       <EditText
           android:id="@+id/edtNameP"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:padding="5dp"
           android:background="#bbbb"
           android:inputType="text"
           android:singleLine="true"
           android:layout_marginTop="5dp"
           android:imeOptions="actionNext"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phone Number"
        android:textSize="18dp"
        android:id="@+id/txtPhoneNumberP"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />
       <EditText
           android:id="@+id/edtPhoneP"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:padding="5dp"
           android:background="#bbbb"
           android:inputType="textPhonetic"
           android:singleLine="true"
           android:layout_marginTop="5dp"
           android:imeOptions="actionNext"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Email"
           android:textSize="18dp"
           android:id="@+id/txtEmailP"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"
           />
       <EditText
           android:id="@+id/edtEmailP"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:padding="5dp"
           android:background="#bbbb"
           android:inputType="textEmailAddress"
           android:singleLine="true"
           android:contextClickable="false"
           android:layout_marginTop="5dp"
           android:imeOptions="actionNext"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Password"
           android:textSize="18dp"
           android:id="@+id/txtPasswordP"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"
           />
       <android.support.constraint.ConstraintLayout
           android:id="@+id/PasswordLayoutP"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/colorWhite"
           >
           <EditText
               android:id="@+id/edtPasswordP"
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:background="#bbbb"
               android:inputType="textPassword"
               android:layout_marginRight="20dp"
               android:padding="5dp"
               android:textSize="18dp"
               android:contextClickable="false"
               app:layout_constraintRight_toLeftOf="@+id/btnChange"
               app:layout_constraintLeft_toLeftOf="parent"
               android:imeOptions="actionNext"
               />
           <Button
               android:layout_width="100dp"
               android:layout_height="30dp"
               android:layout_weight="2"
               android:textSize="18dp"
               android:text="Change"
               android:id="@+id/btnChange"
               android:padding="3dp"
               app:layout_constraintRight_toRightOf="parent"
               android:background="@drawable/button_background"
               android:textColor="@drawable/text_background"
               />
       </android.support.constraint.ConstraintLayout>
   </LinearLayout>

</RelativeLayout>
